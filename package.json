{
  "name": "snyk-swiftpm-plugin",
  "description": "Snyk CLI SwiftPm Plugin",
  "main": "dist/index.js",
  "scripts": {
    "test": "npm run lint && npm run unit-test",
    "unit-test": "jest --no-coverage --timeout=300",
    "lint": "prettier --check \"./lib/**/*.ts\" && eslint -c .eslintrc.js \"./lib/**/*\"",
    "lint:fix": "prettier --write \"./lib/**/*.ts\" && eslint -c .eslintrc.js --fix \"./lib/**/*\"",
    "build": "tsc",
    "build-watch": "tsc -w",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snyk/snyk-swiftpm-plugin.git"
  },
  "author": "snyk.io",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/snyk/snyk-swiftpm-plugin/issues"
  },
  "homepage": "https://github.com/snyk/snyk-swiftpm-plugin#readme",
  "dependencies": {
    "@snyk/dep-graph": "^2.7.1",
    "lookpath": "^1.2.2",
    "tslib": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^20",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16"
  }
}
